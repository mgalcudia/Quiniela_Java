<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>controlador.dwes.Index</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>formulario</servlet-name>
        <servlet-class>controlador.dwes.formulario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FormHelper</servlet-name>
        <servlet-class>controlador.dwes.FormHelper</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>formularioII</servlet-name>
        <servlet-class>controlador.dwes.formularioII</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>num_aleatorio</servlet-name>
        <servlet-class>controlador.dwes.num_aleatorio</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controlador.dwes.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>cerrar_sesion</servlet-name>
        <servlet-class>controlador.dwes.cerrar_sesion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>formulario</servlet-name>
        <url-pattern>/formulario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FormHelper</servlet-name>
        <url-pattern>/FormHelper</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>formularioII</servlet-name>
        <url-pattern>/formularioII</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>num_aleatorio</servlet-name>
        <url-pattern>/num_aleatorio</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>cerrar_sesion</servlet-name>
        <url-pattern>/cerrar_sesion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Index</welcome-file>
    </welcome-file-list>
</web-app>
